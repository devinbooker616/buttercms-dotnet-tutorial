    <!-- Post Headline Start -->
    <div class="post-title">
        <h1>@Model.Title</h1>
    </div>
    <!-- Post Headline End -->
    <!-- Post Detail Start -->
    <div class="post-info">
        <span>
            @(Model.Published.HasValue ? $"{Model.Published.Value:D} / by " : "By ") <a href="/author/@Uri.EscapeDataString(Model.Author.Slug)" target="_blank">@Model.Author.FirstName @Model.Author.LastName</a>
            @if (Model.Categories.Any())
            {
                @:in
            }
            @foreach (var category in Model.Categories)
            {
                <a href="/category/@Uri.EscapeDataString(category.Slug)">@category.Name</a>
            }
        </span>
    </div>
    <!-- Post Detail End -->
    <div class="card">
        <div class="card-body">
            @Html.Raw(Model.Body)
        </div>
    </div>


    <!-- Post Author Bio Box Start -->
    <div class="about-author margin-top-70 margin-bottom-50">

        <div class="picture">
            <img src="@Model.Author.ProfileImage" class="img-responsive img-thumbnail" alt="">
        </div>

        <div class="c-padding">
            <h3>
                Article By <a href="/author/@Uri.EscapeDataString(Model.Author.Slug)" target="_blank" data-toggle="tooltip" data-placement="top" title="View more from @Model.Author.FirstName">@Model.Author.FirstName @Model.Author.LastName</a>
            </h3>
            @if (!string.IsNullOrWhiteSpace(Model.Author.Bio))
            {
                <p>@Model.Author.Bio</p>
            }
            else
            {
                <p>&nbsp;</p>
            }
        </div>
    </div>
    <!-- Post Author Bio Box End -->
    <!-- Post Comment (Disqus) Start -->
    <div id="comment" class="comment">
        <h3>Add a comment</h3>

        <!-- Disqus Code Start -->
        @* Embed your own Discus code snippet here *@
        <!-- Disqus Code End -->

    </div>
    <!-- Post Comment (Disqus) End -->

</div>


